// @++ - increment variable
//   variable-addr => ...   [but variable is incremented]
: @++
	dup	# var var
	@	# int var
	1 + # (int+1) var
	@=  # ...
;

variable draw_routine
variable draw_index
variable draw_column
variable draw_row

# Draw array of strings, one per line, starting in given col and row
#   S= routine_name col row array ... => ...
: draw
	draw_routine swap @=		# col row array
	draw_index 0 @=
	draw_column swap @=			# row array
	draw_row swap @=			# array

	while
		dup				# array array
		draw_index @	# int array array
		@+				# string array
		isEmpty$ !		# bool string array
	do					# string array
		draw_index @	# index string array
		draw_row @		# row index string array
		+				# (index+row) string array
		draw_column @	# col row string array

		draw_routine @	# routine_name col row string array
		call			# array

		draw_index @++	# array
	od
;

100 array guess

100 array answer

variable answerString

: initialize
	pop
	answer make$
	answerString swap @=
;

: game_over
	guess make$
	answer make$
	==$
;

: hangman
	screen_clear

	title 2 35 "draw_at" draw

	scaffold 6 35 "draw_at" draw

	nl nl nl
;


: test_empty_answer
	"." .$^

	"" initialize

	game_over
	1
	assertEqual
;
