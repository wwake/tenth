#  On to Hangman...

: head2$	# In: s2 s1 ...
	head$	# c2 s2' s1
	cab		# s1 c2 s2'
	head$ 	# c1 s1' c2 s2'
	cab	  	# c2 c1 s1' s2'
;

: ==$  # stack= s2 s1 ...
	head2$  # c2 c1 s1' s2'
	dup2	# c2 c1 c2 c1 s1' s2'
	dup2	# c2 c1 c2 c1 c2 c1 s1' s2'

	while
		==
		==0
		!
		&
	do
		# characters are == and not 0
		# c1 c2 c1 s1' s2'

		pop pop pop	# s1' s2'
		head2$		# c1 c2 s1' s2'
		dup2
		dup2		# c2 c1 c2 c1 c2 c1 s1' s2'
	od

	# c1 c2 c1 s1' s2'
	pop  		# c2 c1 s1' s2'

	==

	cba
	pop pop
;


